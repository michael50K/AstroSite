---
interface Props {
	title: string;
	href: string;
}

const { href, title} = Astro.props;
---

<div class="link-card">
	<a href={href}>
		<h2>
			{title}
		</h2>
	</a>
</div>
<style>
	.link-card {
		display: flex;
		flex: 1 1 0px;
	}
	.link-card > a {
		width: 100%;
		text-align: center;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.0rem - 1px);
		color: var(--accent-dark);

		border-bottom: 1px solid var(--accent-dark);
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: var(--text-color);
	}
</style>
